{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "useTabs": false,
  "quoteProps": "as-needed",
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": "*.prisma",
      "options": { "printWidth": 80 }
    },
    {
      "files": "*.md",
      "options": { "proseWrap": "always" }
    }
  ]
}
